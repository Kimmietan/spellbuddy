datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id            Int            @id @default(autoincrement())
  email         String         @unique
  spellingLists SpellingList[]
  rewards       Reward[] 
  createdAt     DateTime       @default(now())
}

model SpellingList {
  id        Int      @id @default(autoincrement())
  name      String
  userId    Int
  user      User     @relation(fields: [userId], references: [id])
  words     Word[]
  createdAt DateTime @default(now())
}

model Word {
  id             Int          @id @default(autoincrement())
  spellingListId Int
  spellingList   SpellingList @relation(fields: [spellingListId], references: [id])
  word           String
  correct        Boolean      @default(false)
  createdAt      DateTime     @default(now())
}


model Reward {
  id         Int    @id @default(autoincrement())
  scoreRange String
  reward     String
  userId     Int
  user       User   @relation(fields: [userId], references: [id])

  @@unique([userId, scoreRange])
}

