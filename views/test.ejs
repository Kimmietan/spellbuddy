<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Test Data</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/css/mystyle.css">
    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css2?family=Fredoka+One&display=swap" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-light bg-light">
        <a class="navbar-brand" href="#">SpellBuddy<span class="text-primary">.net</span></a>
    </nav>

    <!-- Main Content -->
    <div class="container mt-5">
        <h1 class="text-center mb-4">All Users, Spelling Lists, and Words</h1>
        <% users.forEach(user => { %>
            <div class="card mb-3">
                <div class="card-header">
                    <h3>User: <%= user.email %></h3>
                </div>
                <div class="card-body">
                    <% user.spellingLists.forEach(list => { %>
                        <h4>List: <%= list.name %></h4>
                        <ul>
                            <% list.words.forEach(word => { %>
                                <li><%= word.word %> (<%= word.correct ? 'Correct' : 'Incorrect' %>)</li>
                            <% }) %>
                        </ul>
                    <% }) %>
                </div>
            </div>
        <% }) %>
    </div>

    <!-- Footer -->
    <footer class="footer">
        <div class="container">
            <p>&copy; 2024 SpellBuddy.net. All rights reserved.</p>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/@popperjs/core@2.5.4/dist/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
